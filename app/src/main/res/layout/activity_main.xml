<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/a"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >


    <EditText
        android:id="@+id/roll_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:ems="10"
        android:gravity="center"
        android:hint="Enter Roll No."
        android:inputType="number"

        android:textColorHint="#3d3d3d">

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#3d3d3d"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter Your Name" />

    <EditText
        android:id="@+id/marks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter Marks"
        android:inputType="number"
        android:textColorHint="#3d3d3d" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="112dp">

        <Button
            android:id="@+id/addbtn"
            android:layout_width="165dp"
            android:layout_height="100dp"
            android:background="#A3CB38"
            android:gravity="center"
            android:text="Add"
            android:textColor="#ecf0f1"
            android:textSize="20dp" />

        <Button
            android:id="@+id/deletebtn"
            android:layout_width="165dp"
            android:layout_height="100dp"
            android:background="#3c6382"
            android:gravity="center"
            android:text="Delete"
            android:textColor="#ecf0f1"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="111dp">

        <Button
            android:id="@+id/modifybtn"
            android:layout_width="165dp"
            android:layout_height="100dp"
            android:background="#8e44ad"
            android:gravity="center"
            android:text="Modify"
            android:textColor="#ecf0f1"
            android:textSize="20dp" />

        <Button
            android:id="@+id/viewbtn"
            android:layout_width="165dp"
            android:layout_height="100dp"
            android:background="#e74c3c"
            android:gravity="center"
            android:text="VIEW"
            android:textColor="#ecf0f1"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:layout_weight="0.74" >

        <Button
            android:id="@+id/viewallbtn"
            android:layout_width="165dp"
            android:layout_height="100dp"
            android:background="#f1c40f"
            android:gravity="center"
            android:text="VIEW ALL"
            android:textColor="#ecf0f1"
            android:textSize="20dp" />

        <Button
            android:id="@+id/showbtn"
            android:layout_width="165dp"
            android:layout_height="100dp"
            android:text="SHOW"
            android:gravity="center"
            android:background="#00b894"
            android:textColor="#ecf0f1"
            android:textSize="20dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:background="#c23616"

        android:gravity="center"
        android:text="STUDENT MARK MANAGEMENT"
        android:textColor="#f5f6fa"
        tools:textSize="20dp" />


</LinearLayout>